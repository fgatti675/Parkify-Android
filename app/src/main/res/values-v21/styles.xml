<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="CahueTheme" parent="Theme.AppCompat.Light">

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:textColorPrimary">@color/body_text_1</item>
        <item name="android:textColorSecondary">@color/body_text_2</item>

        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="android:navigationBarColor">@color/theme_primary_dark</item>

        <!-- darker variant for the status bar and contextual app bars -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

    </style>

    <style name="ActionBarPopupThemeOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="ActionBarThemeOverlay" parent="CahueTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!--<item name="colorControlNormal">?actionBarIconColor</item>-->
        <!--<item name="colorControlHighlight">@color/white</item>-->
    </style>

    <style name="CahueTheme.Button.Accent" parent="CahueTheme.Dark">
        <item name="android:colorButtonNormal">@color/theme_accent</item>
    </style>

    <style name="CahueTheme.Button.Google" parent="CahueTheme.Dark">
        <item name="android:colorButtonNormal">@color/google_red</item>
    </style>

    <style name="ActionBar.TitleText" parent="android:TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="CahueTheme.Dark" parent="android:Theme.Material">

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:colorBackground">@color/theme_primary</item>

        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:textColorPrimary">@color/body_text_1_inverse</item>
        <item name="android:textColorSecondary">@color/body_text_2_inverse</item>

        <item name="colorAccent">@color/theme_accent</item>
        <!--<item name="cardBackgroundColor">@color/theme_primary_dark</item>-->

    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
    </style>

</resources>