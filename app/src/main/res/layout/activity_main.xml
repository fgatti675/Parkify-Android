<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        class="com.google.android.gms.maps.MapFragment" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/marker_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:elevation="@dimen/elevation"
        tools:context="com.cahue.iweco.spots.SpotDetailsFragment" />

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar_actionbar" />

    <include
        layout="@layout/button_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_location"
        android:layout_above="@+id/marker_details_container"
        android:layout_margin="@dimen/large_padding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

    <include layout="@layout/debug_layout" />

</RelativeLayout>