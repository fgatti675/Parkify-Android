<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        class="com.google.android.gms.maps.MapFragment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAILS"
        android:id="@+id/details_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/carButton"
        android:layout_alignEnd="@+id/carButton"
        android:layout_marginTop="77dp" />

    <ImageButton
        android:id="@+id/carButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/marker_details_container"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/buttons_margin"
        android:layout_marginRight="@dimen/buttons_margin"
        android:padding="@dimen/default_padding"
        android:adjustViewBounds="true"
        android:background="@drawable/plain_button"
        android:scaleType="fitXY"
        android:src="@drawable/ic_icon_car" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/marker_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        tools:context="com.bahpps.cahue.MarkerDetailsFragment" />

    <include layout="@layout/toolbar_actionbar_translucent" />

</RelativeLayout>