<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/large_padding"
    android:paddingTop="@dimen/default_padding"
    android:paddingBottom="@dimen/default_padding"
    android:background="@color/translucent_background"
    tools:context="com.bahpps.cahue.SpotDetailsFragment">

    <ImageView
        android:id="@+id/spot_image"
        android:layout_width="35dp"
        android:layout_height="48.5dp"
        android:src="@drawable/ic_icon_car_red"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:padding="@dimen/default_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/spot_image"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/time_stub" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance_stub"/>

    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/linearLayout"
        android:src="@drawable/ic_action_clear" />

</RelativeLayout>