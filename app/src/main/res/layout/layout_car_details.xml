<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:background="@color/theme_accent"
        android:cropToPadding="false"
        android:padding="@dimen/large_padding"
        android:scaleType="fitStart"
        android:src="@drawable/ic_car_white_24dp" />

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/car_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:paddingRight="@dimen/default_padding"
            android:theme="@style/CahueTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/body_text_1"
                    tools:text="Alfa Romeo Mito" />

                <TextView
                    android:id="@+id/linked_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_padding"
                    android:textColor="@color/body_text_2"
                    tools:text="Blue&amp;Me" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/large_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_access_time_black_18px"
                    android:drawablePadding="@dimen/default_padding"
                    android:drawableStart="@drawable/ic_access_time_black_18px"
                    android:foregroundGravity="center"
                    android:gravity="right"
                    android:singleLine="false"
                    android:textColor="@color/body_text_2"
                    tools:text="Hace 2 horas" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/default_padding"
                    android:singleLine="true"
                    android:textColor="@color/body_text_2"
                    tools:text="1477.3 km" />

            </RelativeLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_padding"
                android:drawableLeft="@drawable/ic_location_city_black_18px"
                android:drawablePadding="@dimen/default_padding"
                android:drawableStart="@drawable/ic_location_city_black_18px"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/body_text_2"
                tools:text="Lindwurmstr. 143" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
