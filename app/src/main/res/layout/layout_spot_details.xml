<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cahue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/large_padding"
    tools:context="com.cahue.iweco.spots.SpotDetailsFragment">

    <ImageView
        android:id="@+id/spot_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/spot_rectangle"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:paddingLeft="@dimen/large_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/spot_image"
        android:layout_toRightOf="@+id/spot_image">

        <android.support.v7.widget.Toolbar
            android:id="@+id/spot_toolbar"
            cahue:theme="@style/ActionBar.Details"
            android:clickable="false"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="TIME"
                android:textColor="@color/body_text_1" />

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/distance_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="DISTANCE"
            android:textColor="@color/abc_secondary_text_material_light" />

    </LinearLayout>

</RelativeLayout>

