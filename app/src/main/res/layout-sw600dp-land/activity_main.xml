<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cahue="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar_actionbar" />

        <fragment
            android:id="@+id/navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:name="com.cahue.iweco.NavigationDrawerFragment"
            tools:layout="@layout/fragment_navigation_drawer" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MapsActivity">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            class="com.google.android.gms.maps.MapFragment" />

        <android.support.v7.widget.CardView
            android:id="@+id/marker_details_container"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            tools:context="com.cahue.iweco.spots.SpotDetailsFragment"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:foreground="?android:attr/selectableItemBackground"
            cahue:cardCornerRadius="@dimen/cardCornerRadius" />

        <include
            layout="@layout/button_my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_location"
            android:layout_above="@+id/marker_details_container"
            android:layout_margin="@dimen/large_padding"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />

        <include layout="@layout/debug_layout" />

    </RelativeLayout>
</LinearLayout>