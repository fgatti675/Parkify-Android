<resources>

    <!-- Base application theme. -->
    <style name="CahueTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Both of these are needed -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:colorBackground">@color/light_grey</item>

        <item name="android:textColorPrimary">@color/body_text_1</item>
        <item name="android:textColorSecondary">@color/body_text_2</item>

        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>

    </style>


    <style name="ActionBarThemeOverlay" parent="CahueTheme">
        <item name="android:background">@color/theme_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!--<item name="colorControlNormal">?actionBarIconColor</item>-->
        <!--<item name="colorControlHighlight">@color/white</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="CahueTheme.Dark">

        <item name="android:colorBackground">@color/theme_primary</item>

        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:textColorPrimary">@color/body_text_1_inverse</item>
        <item name="android:textColorSecondary">@color/body_text_2_inverse</item>

        <item name="colorAccent">@color/theme_accent</item>

        <item name="colorButtonNormal">@color/theme_primary</item>

        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:alertDialogTheme">@style/Dialog.Dark</item>
        <item name="alertDialogTheme">@style/Dialog.Dark</item>
    </style>

    <style name="Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/theme_primary</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:textColorAlertDialogListItem">@color/body_text_1_inverse</item>
    </style>

    <style name="CahueTheme.Dark.TranslucentBars" />

    <style name="CahueTheme.Dark.TranslucentBars.Tutorial">
        <item name="android:windowBackground">@drawable/tutorial_background</item>
    </style>

    <style name="CahueTheme.Dark.TranslucentBars.Login">
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <style name="CahueTheme.Main">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="CahueTheme.Button.Accent" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/theme_accent</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>

    <style name="CahueTheme.Button.Google" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/google_red</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>

    <style name="CahueTheme.Button.Facebook" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/facebook_blue</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>

    <style name="Marker">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
    </style>

    <style name="Marker.Parking">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Marker.Green">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Marker.Orange">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Marker.SetCar">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Marker.PossibleCar">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Marker.Selected">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_primary</item>
    </style>

    <style name="TextAddress" parent="TextAppearance.AppCompat.Small">
        <item name="android:drawableStart">@drawable/ic_location_city_black_18px</item>
        <item name="android:drawableLeft">@drawable/ic_location_city_black_18px</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="TextTime" parent="TextAppearance.AppCompat.Small">
        <item name="android:drawableStart">@drawable/ic_access_time_black_18px</item>
        <item name="android:drawableLeft">@drawable/ic_access_time_black_18px</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:textColor">@color/theme_primary</item>
    </style>


    <style name="NavigationButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:scaleType">center</item>
    </style>


</resources>
